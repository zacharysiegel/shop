name: shop

services:
  postgres:
    image: postgres:17.4-alpine
    environment:
      POSTGRES_USER: shop
      POSTGRES_PASSWORD: postgres__user.shop.password # Replaced by setup script
      POSTGRES_DB: shop
    ports:
      - '127.0.0.1:5432:5432/tcp'
    volumes:
      - postgres-data:/var/lib/postgresql/data
    restart: unless-stopped
    networks:
      - shop

  nginx:
    image: nginx:1.28-alpine-slim
    ports:
      - '127.0.0.1:1443:443/tcp'
    volumes:
      - ./proxy/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./proxy/authelia:/etc/nginx/authelia:ro
      - ./proxy/cert:/cert:ro
      - ./frontend/static:/frontend/static:ro
      - ./volatile:/volatile:ro
      - ./appended_hosts:/etc/appended_hosts
    restart: unless-stopped
    networks:
      - shop

  authelia:
    image: authelia/authelia:4.39
    ports:
      - '127.0.0.1:11002:11002/tcp'
    env_file:
      - ./identity/.env
    volumes:
      - ./identity/config:/config
      - ./identity/secret:/secret
      - ./identity/data:/data
    restart: unless-stopped
    networks:
      - shop

  authelia-validate:
    image: authelia/authelia:4.39
    command: authelia config validate --config /config/configuration.yml
    env_file:
      - ./identity/.env
    volumes:
      - ./identity/config:/config
      - ./identity/secret:/secret
      - ./identity/data:/data
    restart: 'no'
    profiles:
      - validate

